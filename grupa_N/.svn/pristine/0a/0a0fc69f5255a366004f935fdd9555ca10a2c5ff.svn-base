<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core">

    <body>

        <ui:composition template="./predlozak.xhtml">

            <ui:define name="naslov">
                NWTiS - Pregled adresa i prognoza vremena
            </ui:define>

            <ui:define name="top">
                NWTiS - Pregled adresa i prognoza vremena
            </ui:define>

            <ui:define name="left">
                <h:link outcome="index" value="Početna stranica"/><br/>
                <h:link outcome="dnevnik" value="Pregled dnevnika"/>
            </ui:define>

            <ui:define name="content">
                <h:form id="obrazac">
                    <h:panelGrid columns="3">
                        <h:panelGroup layout="block">
                            <h:outputLabel value="Nova adresa:"/> 
                        </h:panelGroup>
                        <h:panelGroup layout="block">
                            <h:inputText id="novaAdresa" value="#{odabirAdresaPrognoza.novaAdresa}" size="50"/>
                        </h:panelGroup>
                        <h:panelGroup layout="block">
                            <h:commandButton value=" Dodaj adresu " action="#{odabirAdresaPrognoza.dodajNovuAdresu()}">
                                <f:ajax render="aktivneAdrese" execute="novaAdresa"/>
                            </h:commandButton>
                        </h:panelGroup>
                        <h:panelGroup layout="block">
                            <h:selectManyListbox id="aktivneAdrese" value="#{odabirAdresaPrognoza.adreseZaDodavanje}" size="10">
                                <f:selectItems value="#{odabirAdresaPrognoza.aktivneAdrese}"/>
                            </h:selectManyListbox>
                        </h:panelGroup>
                        <h:panelGroup layout="block">
                            <h:commandButton value=" Preuzmi " action="#{odabirAdresaPrognoza.preuzmiAdrese()}">
                                <f:ajax render="kandidiraneAdrese aktivneAdrese" execute="aktivneAdrese"/>
                            </h:commandButton><br/>
                            <h:commandButton value=" Makni " action="#{odabirAdresaPrognoza.dodajNovuAdresu()}">
                                <f:ajax render="aktivneAdrese" execute="novaAdresa"/>
                            </h:commandButton><br/>
                            <h:commandButton value=" Ažuriraj " action="#{odabirAdresaPrognoza.azurirajAdresu()}">
                                <f:ajax render="azuriranaAdresa" execute="aktivneAdrese"/>
                            </h:commandButton><br/>
                        </h:panelGroup>
                        <h:panelGroup layout="block">
                            <h:selectManyListbox id="kandidiraneAdrese" value="#{odabirAdresaPrognoza.adreseZaBrisanje}" size="10">
                                <f:selectItems value="#{odabirAdresaPrognoza.kandidiraneAdrese}"/>
                            </h:selectManyListbox>
                        </h:panelGroup>
                        <h:panelGroup layout="block">
                            <h:outputLabel value="Adresa za ažuriranje:" rendered="#{odabirAdresaPrognoza.prikazAzuriranjaAdrese}"/> 
                        </h:panelGroup>
                        <h:panelGroup layout="block">
                            <h:inputText id="azuriranaAdresa" value="#{odabirAdresaPrognoza.azuriranaAdresa}" size="50" rendered="#{odabirAdresaPrognoza.prikazAzuriranjaAdrese}"/>
                        </h:panelGroup>
                        <h:panelGroup layout="block">
                            <h:commandButton value=" Dodaj adresu " action="#{odabirAdresaPrognoza.upisiAdresu()}" rendered="#{odabirAdresaPrognoza.prikazAzuriranjaAdrese}">
                                <f:ajax render="aktivneAdrese" execute="azuriranaAdresa"/>
                            </h:commandButton>
                        </h:panelGroup>
                        
                    </h:panelGrid>
                </h:form>
                    
            </ui:define>

        </ui:composition>

    </body>
</html>
