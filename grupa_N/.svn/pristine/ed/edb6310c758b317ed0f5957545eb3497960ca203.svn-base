<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:ui="http://xmlns.jcp.org/jsf/facelets"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core"
      xmlns:c="http://xmlns.jcp.org/jsp/jstl/core">

    <body>

        <ui:composition template="./predlozak.xhtml">

            <ui:define name="naslov">
                NWTiS - Pregled adresa i prognoza vremena
            </ui:define>

            <ui:define name="top">
                NWTiS - Pregled adresa i prognoza vremena
            </ui:define>

            <ui:define name="left">
                <h:link outcome="pocetak" value="Početna stranica"/>
                <br/>
                <h:link outcome="dnevnik" value="Pregled dnevnika"/>
                <br/>
            </ui:define>

            <ui:define name="content">
                <h:form id="obrazac">
                    <h:panelGrid columns="3">

                        <h:outputLabel value="Nova adresa:"/>
                        <h:inputText id="novaAdresa" value="#{odabirAdresaPrognoza.novaAdresa}" size="50" />
                        <h:commandButton value="Dodaj adresu" action="#{odabirAdresaPrognoza.dodajNovuAdresu()}" >
                            <f:ajax execute="novaAdresa" render="aktivneAdrese"/>
                        </h:commandButton>

                        <h:selectManyListbox id="aktivneAdrese" value="#{odabirAdresaPrognoza.adreseZaDodavanje}">
                            <f:selectItems value="#{odabirAdresaPrognoza.aktivneAdrese}"/>
                        </h:selectManyListbox>
                        
                        <h:panelGroup layout="block">
                            <h:panelGrid>
                                <h:commandButton value="Preuzmi" action="#{odabirAdresaPrognoza.preuzmiAdrese()}" >
                                    <f:ajax execute="aktivneAdrese" render="aktivneAdrese odabraneAdrese"/>
                                </h:commandButton>
                                <h:commandButton value="Makni" action="#{odabirAdresaPrognoza.makniAdrese()}" />
                                <h:commandButton value="Azuriraj" action="#{odabirAdresaPrognoza.azurirajAdresu()}" >
                                    <f:ajax execute="aktivneAdrese" render="azuriranaAdresa buttonAzuriranaAdresa labelAzuriranaAdresa"/>
                                </h:commandButton>
                            </h:panelGrid>
                        </h:panelGroup>
                        
                        <h:selectManyListbox id="odabraneAdrese" value="#{odabirAdresaPrognoza.adreseZaMicanje}">
                            <f:selectItems value="#{odabirAdresaPrognoza.odabraneAdrese}"/>
                        </h:selectManyListbox>
                        
                        <h:outputLabel id="labelAzuriranaAdresa" value="Ažuriraj adresu:" style="display: #{odabirAdresaPrognoza.prikaziAzuriranjeAdresa};"/>
                        <h:inputText id="azuriranaAdresa" value="#{odabirAdresaPrognoza.azuriranaAdresa}" size="50"  style="display: #{odabirAdresaPrognoza.prikaziAzuriranjeAdresa};"/>
                        <h:commandButton id="buttonAzuriranaAdresa" value="Upiši" action="#{odabirAdresaPrognoza.spremiAzuriranje()}" style="display: #{odabirAdresaPrognoza.prikaziAzuriranjeAdresa};" />
                        <!-- možda bi mogli i sa rendered riješiti umjesto style atributa-->
                        <h:commandButton value="Pregled prognoza" action="#{odabirAdresaPrognoza.pregledajPrognoze()}" />
                    </h:panelGrid>
                </h:form>
            </ui:define>

        </ui:composition>

    </body>
</html>
