<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <application>
        <resource-bundle>
            <base-name>org.foi.nwtis.matnovak.i18n</base-name>
            <var>m</var>
        </resource-bundle>
        <locale-config>
            <default-locale>hr</default-locale>
            <supported-locale>en</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
    </application>
    <navigation-rule>
        <from-view-id>/index.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{lokalizacija.odaberiJezik}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>slanjePoruka</from-action>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/slanjePoruke.xhtml</from-view-id>
        <navigation-case>
            <from-action>odaberiJezik</from-action>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{slanjePoruke.posaljiPoruku()}</from-action>
            <from-outcome>OK</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{slanjePoruke.posaljiPoruku()}</from-action>
            <from-outcome>ERROR</from-outcome>
            <to-view-id>/slanjePoruke.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
</faces-config>
