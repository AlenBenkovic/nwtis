<?xml version='1.0' encoding='UTF-8' ?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:h="http://xmlns.jcp.org/jsf/html"
      xmlns:f="http://xmlns.jcp.org/jsf/core">
    <f:view locale="#{lokalizacija.vazeciJezik}">
        <h:head>
            <title>#{m.slanjePoruke_naslov}</title>
        </h:head>
        <h:body>
            <h:form>
                <h:outputLabel value="#{m.slanjePoruke_salje}" />
                <h:inputText value="#{slanjePoruke.salje}"/><br/>
                <h:outputLabel value="#{m.slanjePoruke_prima}" />
                <h:inputText value="#{slanjePoruke.prima}"/><br/>
                <h:outputLabel value="#{m.slanjePoruke_predmet}" />
                <h:inputText value="#{slanjePoruke.predmet}"/><br/>
                <h:outputLabel value="#{m.slanjePoruke_poruka}" />
                <h:inputTextarea cols="60" rows="10" value="#{slanjePoruke.sadrzaj}"/><br/>
                <h:commandButton value="#{m.slanjePoruke_posalji}" action="#{slanjePoruke.posaljiPoruku()}"/>
                <br/><br/>
                <h:outputLabel value="#{slanjePoruke.poruka}"/>
                <br/><br/>
                <h:commandLink value="#{m.slanjePoruke_pocetna}" action="odaberiJezik" />
            </h:form>
        </h:body>
    </f:view>
</html>

